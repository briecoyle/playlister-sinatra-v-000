<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1><%= @song.name %></h1>

<h3>Artist:</h3>
<p>
  <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a>
</p>



<h3>Genres:</h3>
<% @song.genres.each do |a| %>
<p><a href="/genres/<%= a.slug %>"><%= a.name %></a></p>
<% end %>
